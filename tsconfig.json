{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./build",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "include": ["./src/**/*", "./config/**/*"],
}
